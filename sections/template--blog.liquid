<!-- /templates/blog.liquid -->
{% comment %}
  Loop through a defined number of articles with the 'paginate' tag.
  Don't forget to close the tag after your loop.
{% endcomment %}

{% paginate blog.articles by 12 %}
  {% comment %}
    This template is also used for listing out articles of a specific tag.
    You can change layouts or styles by checking if current_tags is true.
  {% endcomment %}

  <div class="wrapper-padded main-page-container">
    <div class="grid blog-main--wrapper">
      <div class="sitewide--title-wrapper">
        {% if current_tags %}
          <h1 class="page--title">{{ blog.title | link_to: blog.url }} &mdash; {{ current_tags.first }}</h1>
        {% else %}
          <h1 class="page--title">
            {{ blog.title }}
            <!-- <a href="{{ shop.url }}{{ blog.url }}.atom"><i class="fa fa-rss" aria-hidden="true"></i></a> -->
          </h1>
        {% endif %}
      </div>

      <div class="grid__item  blog-template--main">
        {% comment %}
          Loop through each article in your blog. This is limited to what you set for pagination above.

          For more info on article liquid tags:
            - http://docs.shopify.com/themes/liquid-variables/article
        {% endcomment %}

        {% for article in blog.articles %}
          <div class="article--indiv grid">
            {% comment %}
              <div class="grid__item large--one-quarter blog-template--individual">
                <div>
                  {% if section.settings.show_author_name %}
                    {{ article.author -}}
                    <br>
                  {% endif %}
                  {% if section.settings.blog_show_date %}
                    <time class="indiv-post-time" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                      {{- article.published_at | time_tag: format: 'date' -}}
                    </time>
                  {% endif %}
                </div>

                <ul class="blog-sidebar--meta">
                  {% if blog.comments_enabled? %}
                    <li>
                      <a href="{{ article.url }}#comments">
                        {{ 'blogs.comments.with_count' | t: count: article.comments_count }}
                      </a>
                    </li>
                  {% endif %}

                  {% if article.tags.size > 0 %}
                    <li>
                      <span>{{ 'blogs.article.tags' | t }}:</span>
                      {% for tag in article.tags %}
                        <a href="{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag }}</a>
                        {%- unless forloop.last %}, {% endunless %}
                      {% endfor %}
                    </li>
                  {% endif %}
                </ul>
              </div>
            {% endcomment %}

            <div class="grid__item">
              {% if article.image %}
                <div class="article__featured-image-wrap">
                  <a
                    class="article__featured-image{% if settings.ken_burns_enabled %} kb-enabled{% endif %}"
                    href="{{ article.url }}"
                  >
                    {% capture article_alt %}{{ article.image.alt | default: article.title }}{% endcapture %}
                    {% render 'responsive-image' with article.image, alt: article_alt | escape, sizes: '(min-width: 2000px) 480px, (min-width: 1445px) 300px, (min-width: 1200px) 300px, (min-width: 1000px) 250px, (min-width: 750px) 250px, 250px' %}
                  </a>
                </div>
              {% endif %}

              <h2 class="blog-main--article-title">
                <a href="{{ article.url }}">{{ article.title }}</a>
              </h2>

              {% comment %}
                Add a surrounding div with class 'rte' to anything that will come from the rich text editor.
                Since this is just a listing page, you can either use the excerpt or truncate the full article.
              {% endcomment %}
              {% comment %}
                  <div class="rte">
                    {{ article.excerpt_or_content | strip_html | truncatewords: 100 }}
                  </div>


                <p>
                  <a href="{{ article.url }}">{{ 'blogs.article.read_more' | t }} &rarr;</a>
                </p>
              {% endcomment %}
              <button class="quick-add-button"><a href="{{ article.url }}">{{ 'blogs.article.read_more' | t }}</a></button>
            </div>
          </div>

          {% comment %}{% unless forloop.last %}<hr>{% endunless %}{% endcomment %}
        {% endfor %}
      </div>
      {% comment %}
        <div class="grid__item large--one-quarter">

          {% if section.settings.blog-sidebar-image %}
            {% if section.settings.blog-sidebar-link %}
              <a href="{{ section.settings.blog-sidebar-link }}" itemprop="url">
            {% endif %}

            {% capture blog_sidebar_alt %}{{ section.settings.blog-sidebar-image.alt | default: shop.name }}{% endcapture %}
            {% render 'responsive-image' with section.settings.blog-sidebar-image, alt: article.title, class: 'blog-sidebar-image', alt: blog_sidebar_alt | escape %}

            {% if section.settings.blog-sidebar-link %}
              </a>
            {% endif %}
          {% endif %}

          {% if section.settings.blog-sidebar-description != '' %}
            <div class="rte">{{ section.settings.blog-sidebar-description }}</div>
          {% endif %}

          {% if section.settings.show_recent_posts %}
          <div class="h4">{{ 'blogs.sidebar.recent_articles' | t }}</div>
          <ul class="no-bullets blog-sidebar--recent-articles">
            {% for article in blogs[blog.handle].articles limit:6 %}
              <li>
                <a href="{{ article.url }}">{{ article.title }}</a>
                <br>
                {% if section.settings.blog_show_date %}
                  <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | time_tag: format: 'date' }}</time>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
          {% endif %}

          {% if section.settings.show_blog_tags %}
            <div class="h4">{{ 'blogs.sidebar.categories' | t }}</div>
            <ul class="no-bullets blog-sidebar--all-categories">
              {% for tag in blog.all_tags %}
                {% if current_tags contains tag %}
                <li>{{ tag }}</li>
                {% else %}
                <li>{{ tag | link_to_tag: tag }}</li>
                {% endif %}
              {% endfor %}
            </ul>
          {% endif %}



        </div>
      {% endcomment %}
      <div class="grid__item large--one-whole">
        {% if paginate.pages > 1 %}
          <div class="pagination grid__item ">
            <ul>
              <li class="pagination-arrow {% if paginate.previous %}active{% endif %}">
                <!-- <a href="{{ paginate.previous.url }}"><i class="fa icon-angle-left"></i></a> -->
                <a href="{{ paginate.previous.url }}">&laquo; Previous</a>
              </li>

              {% for part in paginate.parts %}
                {% if part.is_link %}
                  <li class="pagination-number">{{ part.title | link_to: part.url }}</li>
                {% else %}
                  {% if part.title == '&hellip;' %}
                    <li class="ellipsis">{{ part.title }}</li>
                  {% else %}
                    <li class="active pagination-number">{{ part.title | link_to: part.url }}</li>
                  {% endif %}
                {% endif %}
              {% endfor %}

              <li class="pagination-arrow {% if paginate.next %}active{% endif %}">
                <!-- <a href="{{ paginate.next.url }}"><i class="fa icon-angle-right"></i></a> -->
                <a href="{{ paginate.previous.url }}">Next &raquo;</a>
              </li>
            </ul>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
  <style>
    .blog-template--main {
          display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    row-gap: 50px;
    column-gap: 30px;
    }
    .blog-template--main .grid__item {
      text-align: center;
    }
    .pagination a {
      font-family: "Gotham Narrow"!important;
      color: #00525f!important;
    }
    .pagination .pagination-arrow a {
          text-transform: capitalize;
      font-weight: 400!important;
      font-size: 15px!important;
      opacity: 0.8;
    }
    .pagination .pagination-number a{
      font-size: 16px!important;
      font-weight: 400!important;
      padding: 3px!important;
      opacity: 0.8;
    }
    .pagination .pagination-number.active a,
    .pagination .pagination-arrow.active a {
        opacity: 1;
    }
    .pagination .active.pagination-number a:before, .pagination .pagination-arrow a:hover:before, .pagination .pagination-number a:hover:before {
          background-color: transparent;
    }
    .blog-main--article-title ~ .quick-add-button a {
      color: #ffffff!important;
    }
    .blog-main--article-title ~ .quick-add-button:hover a {
      color: #0097ab!important;
    }
    @media screen and (max-width: 768px) {
        .blog-template--main {
              grid-template-columns: 1fr;
              column-gap: 20px;
        }
       .blog-template--main img {
          width: 300px!important;
          height: 300px!important;
          object-fit: cover;
        }
    }
    @media screen and (max-width: 1620px) and (min-width: 769px){
        .blog-template--main {
              grid-template-columns: 1fr 1fr;
          column-gap: 20px;
        }
       .blog-template--main img {
          width: 380px!important;
          height: 380px!important;
          object-fit: cover;
        }
    }
  </style>
{% endpaginate %}

