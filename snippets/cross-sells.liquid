<div class="cross-sells-wrapper" style="background-color: {{ block_settings.cross_sell_bg }};">
  {% if block_settings.title != blank %}
    <h4 class="label custom-font product-description-header">{{ block_settings.title }}</h4>
  {% endif %}
  {% assign subheading_font = settings['subheading--font'] %}
  {% assign base_font = settings.type_base_font %}
  <style>
    cross-sell {
      --cross-sell-bg: {{ block_settings.cross_sell_bg }};
      --color-primary: {{ settings.color_body_text }};
      --color-primary-light: {{ settings.color_body_text | color_modify: 'alpha', 0.2 }};
      --border-color: {{ settings.color_body_text | color_modify: 'alpha', 0.5 }};
      --border-color-subtle: {{ settings.color_body_text | color_modify: 'alpha', 0.1 }};
      --button-background-color: {{ settings.color_primary_button_background }};
      --button-background-hover-color: {{ settings.color_primary_button_background_hover }};
      --button-text-color: {{ settings.color_primary_button_text }};
      --body-font-size: {{ settings.typography-body-font-size }}px;
      {%- if settings.button_text_case == "uppercase" %}
        --buttons-transform: uppercase;
        --buttons-letter-spacing: 2px;
      {% else %}
        --buttons-transform: none;
        --buttons-letter-spacing: 0;
      {% endif -%}
      {%- if settings.buttons--font == 'body' %}
        --button-font-family: {{ base_font.family }}, {{ base_font.fallback_families }};
        --button-font-weight: {{ base_font.weight }};
        --button-font-style: {{ base_font.style }};
      {% endif -%}
    }

    {% if block_settings.cross_sell_bg != "rgba(0,0,0,0)" %}
      .cross-sells-wrapper {
        padding: 16px;
      }

      .select-wrapper ul {
        background-color: var(--color-primary-background);
      }
    {% endif %}

    .cross-sells-wrapper {
      margin: 15px 0;
    }

    .cross-sells-wrapper .product-description-header {
      margin-bottom: 16px;
    }
  </style>
  {% if block_settings.cross_sell_product_1 != blank %}
    {% assign product_1 = all_products[block_settings.cross_sell_product_1] %}
    {% if current_product_id != product_1.id %}
      {% render 'product-cross-sell', product_id: block_settings.cross_sell_product_1 %}
    {% endif %}
  {% endif %}
  {% if block_settings.cross_sell_product_2 != blank %}
    {% assign product_2 = all_products[block_settings.cross_sell_product_2] %}
    {% if current_product_id != product_2.id %}
      {% render 'product-cross-sell', product_id: block_settings.cross_sell_product_2 %}
    {% endif %}
  {% endif %}
  {% if block_settings.cross_sell_product_3 != blank %}
    {% assign product_3 = all_products[block_settings.cross_sell_product_3] %}
    {% if current_product_id != product_3.id %}
      {% render 'product-cross-sell', product_id: block_settings.cross_sell_product_3 %}
    {% endif %}
  {% endif %}
</div>

<script src="{{ 'component-cross-sells.js' | asset_url }}" type="module" defer="defer" data-internal-script></script>
